<h1>Bot</h1>
<dl>
  <dt>Empresa:</dt>
  <dd><%= @bot.company.name %> </dd>
  <dt>Token:</dt>
  <dd><%= @bot.token %></dd>
  <dt>Status:</dt>
  <dd><%= Bot.human_attribute_name("status.#{@bot.status}") %></dd>
  <% if @bot.active? %>
    <p><%= link_to 'Bloquear', bot_block_path(@bot), method: :put %></p>
    <% elsif @bot.awaiting? %>
      <p>Aguardando confirmação de bloqueio</p>
  <% end %>
</dl>
