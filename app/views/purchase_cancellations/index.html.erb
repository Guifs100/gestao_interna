<h1>
  <%= t('activerecord.models.purchase_cancellation.other') %>
</h1>

  <section>

      <table class="col">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.purchase_cancellation.id') %></th>
            <th><%= t('activerecord.models.company.one') %></th>
            <th><%= t('activerecord.attributes.company.token') %></th>
            <th><%= t('activerecord.models.plan.one') %></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @purchase_cancellations.each do |request| %>
            <tr id="request-<%= request.id %>">
              <td><%= request.id %></td>
              <td><%= request.purchase.company.name %></td>
              <td><%= request.purchase.company.token %></td>
              <td><%= request.purchase.plan.name %></td>

              <td>
                <%= link_to t('.approve'), approve_purchase_cancellation_path(request), method: :post %>
                <%= link_to t('.reject'), reject_purchase_cancellation_path(request), method: :post %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

  </section>
