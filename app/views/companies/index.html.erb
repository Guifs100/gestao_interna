<h1><%= t('.message')%></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Status</th>
      <th scope="col">Token</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr id=<%="company-#{company.id}"%>>
        <td><%= company.fantasy_name %></td>
        <% if company.blocked? %>
          <td> Bloqueada </td>
        <% else%>
          <td> Ativa </td>
        <% end %>
        <td><%= company.token %></td>
        <td><%= link_to 'Detalhes', company_path(company)%></td>
      </tr>
    <% end %>
  </tbody>
<table>
